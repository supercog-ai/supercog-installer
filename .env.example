# Supercog Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# REQUIRED: AI API Keys (set at least one)
# =============================================================================
# OpenAI API Key - for GPT models
OPENAI_API_KEY=

# Claude API Key - for Anthropic Claude models
CLAUDE_INTERNAL_API_KEY=

# =============================================================================
# Application Settings
# =============================================================================
ENV=production
DEBUG=0

# =============================================================================
# Service URLs (these are correct for docker compose setup)
# =============================================================================
ENGINE_URL=http://engine:8080
TRIGGERSVC_URL=http://triggersvc:8002
REDIS_URL=redis://redis:6379

# =============================================================================
# Database Configuration
# =============================================================================
# Main database URL (uses service name 'postgres' in docker compose)
DATABASE_URL=postgresql://pguser:@postgres:5432/monster_dashboard

# PostgreSQL settings
POSTGRES_USER=pguser
POSTGRES_PASSWORD=
POSTGRES_DB=postgres

# PGVector database for RAG
PGVECTOR_DB_URL=postgresql://pguser:@postgres:5432/monster_rag

# =============================================================================
# S3/MinIO Configuration
# =============================================================================
S3_PUBLIC_BUCKET=images-bucket
S3_FILES_BUCKET_NAME=files-bucket
AWS_ACCESS_KEY_ID=minio
AWS_SECRET_KEY=miniosecret

# MinIO endpoints (using docker compose service name)
AWS_ENDPOINT_WRITE_URL=http://minio:9002
AWS_ENDPOINT_READ_URL=http://minio:9002

# MinIO ports (external access)
MINIO_API_PORT_NUMBER=9002
MINIO_CONSOLE_PORT_NUMBER=9003

# =============================================================================
# Security Keys (will be auto-generated by installer if not provided)
# =============================================================================
DASH_PRIVATE_KEY=
DASH_PUBLIC_KEY=

# Credentials encryption key (will be auto-generated if not provided)
CREDENTIALS_MASTER_KEY=

# =============================================================================
# Registry Configuration
# =============================================================================
REGISTRY_URL=supercog-registry.fly.dev

# =============================================================================
# Email Configuration
# =============================================================================
SKIP_EMAIL_VERIFICATION=1

# =============================================================================
# Google Integration (Optional)
# =============================================================================
# For Google OAuth login
GOOGLE_CLIENT_ID=skip
GOOGLE_CLIENT_SECRET=you-need-to-generate-your-own

# For Google Docs/Drive integration
GOOGLE_PICKER_API_KEY=
GOOGLE_APP_ID=
GDOCS_CLIENT_ID=
GDOCS_CLIENT_SECRET=

# =============================================================================
# Engine Configuration
# =============================================================================
SPECIAL_TOOLS=1

# =============================================================================
# Data Storage Location (Optional)
# =============================================================================
# Edit if you want Docker volumes to store data somewhere other than default
# This is handled by Docker volumes, so typically not needed
# SUPERCOG_DATA=${HOME}/supercog_data